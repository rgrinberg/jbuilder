
(library
 ((name lib1)
  (public_name lib1)
  (modules (Lib1))))

(alias
 ((name runtest)
  (package lib1)
  (deps (test1.exe))
  (action (run %{<}))))

(executable
 ((name test1)
  (modules (Test1))
  (libraries (lib1))))


