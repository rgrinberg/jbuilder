(lang dune 1.7)
(name cohttp)
(source (github mirage/ocaml-cohttp))
(license ISC)
(authors "Anil Madhavapeddy" "Rudi Grinberg")

(opam
  (tags org:mirage org:dune)
  (constraints
   (ocaml >= 4.06.0)
   (cohttp < 1.0.0)
  )
  (package
    (name cohttp)
    (synopsis "An OCaml library for HTTP clients and servers")
    (constraints
      (uri >= 1.9.0)
      (uri < 2.0.0)
      (fieldslib < v0.12)
      (sexplib < v0.12)))
  (package
    (name cohttp-async)
    (synopsis "HTTP client and server for the Async library")
    (constraints
      (cohttp >= 1.0.2)
      (conduit-async >= 1.0.3)
      (async >= v0.10.0)
      (async < v0.12)))
)
